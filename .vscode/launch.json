{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: app-name",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
            "protocol": "inspector",
            "port": 3000,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}